---
import SideMenuItem from '@/components/SideMenuItem.astro'
import SideMenuCard from '@/components/SideMenuCard.astro'

import IconHome from '@/icons/Home.astro'
import IconSearch from '@/icons/Search.astro'
import IconLibrary from '@/icons/Library.astro'

import { playlists } from '@/lib/data'

---

<nav class="flex flex-col flex-1 gap-2">
  <div class="bg-zinc-900 rounded-lg flex flex-col p-2">
    <ul>
      <SideMenuItem href='/'>
        <IconHome/>
        Inicio
      </SideMenuItem>
      <SideMenuItem>
        <!-- <IconSearch/>
        Buscar
      </SideMenuItem> -->
    </ul>
  </div>

  <div class="bg-zinc-900 rounded-lg p-2 flex-1">
    <ul>
      <SideMenuItem>
        <IconLibrary/>
        Tu bliblioteca
      </SideMenuItem>

      {
        playlists.map(playlist => <SideMenuCard playlist={playlist} />)
      }

    </ul>
  </div>
</nav>
