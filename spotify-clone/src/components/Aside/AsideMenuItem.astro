---
interface Props {
  className?: string
  href: string  
}

const { className = "", href } = Astro.props

---

<li class="group">
  <a href={href} 
    class={`${className}
    flex flex-row py-2 px-4 gap-4 items-center 
    text-xl text-gray-400 font-bold
    group-hover:text-white`}
  >
    <slot />
  </a>
</li>