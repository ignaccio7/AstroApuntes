---
import Layout from "../../layouts/Layout.astro";
import Counters from "../Counters.astro";
import Gallery from "../Gallery.astro";
import Hero from "../Hero.astro";
---

<Layout title="Archivo" description="Descripcion de archivo">
  <Hero image="/images/archivo/archivo-background.webp">
    <h1 class="font-tomaso text-5xl text-white uppercase tracking-widest text-center mb-4">      
      Ediciones anteriores
    </h1>
    <a 
      class="border border-white w-fit mx-auto rounded-full px-4 py-2 text-md text-white font-bold font-jura cursor-pointer
      ">
      CRITERIOS DE INFORMACION
    </a>
  </Hero>

  <div class="">
    <Gallery />
  </div>
  
  <Counters />

</Layout>

<style>
  a {
    transition: all .25s ease-in-out;
  }
  a:hover {
    box-shadow: 0px 0px 10px #fff;
    text-shadow: 0px 0px 10px #fff;
  }
</style>