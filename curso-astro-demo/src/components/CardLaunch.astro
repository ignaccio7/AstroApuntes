---

interface Props {
    id: number;
    active: boolean;
    name: string;
    type: string;
    image: string;    
}

const { id, active, name, type, image } = Astro.props
const activeText = active ? 'Activo' : 'Inactivo'

---

<!-- <a href={`/launch/${id}`} -->
<div
    class="rounded-lg border shadow-md bg-gray-700 border-gray-700 hover:scale-105 hover:bg-gray-600 hover:border-gray-300 transition flex flex-col"
>
    <picture class="flex justify-center p-4">
        <img class="mb-5 rounded-lg" src={image} alt={name}>
    </picture>

    <header
        class="p-4 flex-grow"
    >
        <!-- <span
            class={`text-xs font-semibold mr-2 px-2.5 py-0.5 rounded ${active ? 'bg-green-200 text-green-900' : 'bg-red-200 text-green-900' }`}
        > -->
        <span
            class={` $`}
            class:list={[
                "text-xs font-semibold mr-2 px-2.5 py-0.5 rounded",
                {'bg-green-200 text-green-900' : active,
                 'bg-red-200 text-green-900' : !active }
            ]}
        >
            {activeText}
        </span>

        <h2 
            class="my-2 text-2xl font-bold tracking-tight text-white"
        >
            {name}            
        </h2>

        <p class="mb-4 font-light text-gray-400">
            Type : {type}
        </p>

    </header>

<div/>