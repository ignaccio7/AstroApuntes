---
import Button from "./Button.astro";
---

<section class="about bg-black/10 mt-12 relative overflow-hidden">
  <div
    class="absolute -z-30 opacity-30 inset-0 flex justify-center items-center"
  >
    <img
      src="/images/svg/animacion2.svg"
      alt="animacion"
      class="w-full h-auto max-w-[500px]"
    />
  </div>
  <div class="container py-20 grid grid-cols-1 md:grid-cols-2 gap-4">
    <!-- DESIGNER -->
    <article class="desginer flex flex-col justify-center items-center gap-4">
      <header class="flex gap-2 items-end text-gray-700">
        <h2 class="text-2xl font-bold flex flex-col">
          <div class="flex">
            <img
              src="/images/logo.webp"
              alt="Formix"
              class="w-32 h-auto object-contain object-center"
            />
            esta
          </div>
          <p>incluído en tu</p>
        </h2>
        <figure class="w-24 sm:w-42 h-auto shrink-0">
          <img
            class="w-full h-auto"
            src="/images/svg/CDV3-V.svg"
            alt="CDV3-V"
          />
        </figure>
      </header>
      <div class="content flex flex-col justify-center gap-4 text-gray-700">
        <p class="text-gray-700 text-xl font-medium">
          Es una aplicación que es parte del ecosistema
        </p>
        <div class="buttons flex gap-4 items-center flex-wrap">
          <Button size="md" text="Ingresa con Ciudadania" />
          <a href="/" class="text-xl text-button font-semibold">
            ¿Qué es ciudadanía digital?</a
          >
        </div>
      </div>
    </article>
    <!-- COUNTERS -->
    <div class="counters grow w-full">
      <h2
        class="text-center text-3xl mt-4 md:mt-0 mb-4 md:mb-2 font-bold text-tertiary"
      >
        Nuestras estadísticas
      </h2>
      <div
        class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-2 xl:grid-cols-4
      w-full items-center justify-center justify-items-center gap-4 max-w-[700px] mx-auto"
      >
        <img src="/images/counters/1.png" alt="Uno" />
        <img src="/images/counters/2.png" alt="Uno" />
        <img src="/images/counters/3.png" alt="Uno" />
        <img src="/images/counters/4.png" alt="Uno" />
      </div>
    </div>
  </div>
</section>
