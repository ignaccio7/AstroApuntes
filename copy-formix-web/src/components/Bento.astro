---
import BentoItem from "./BentoItem.astro";
import ArrowRight from "../Icons/ArrowRight.astro";
---

<section class="bento-section container mt-14">
  <h2 class="text-center text-3xl font-semibold text-tertiary">
    Aprende mas acerca de Formix
  </h2>
  <div class="bento mt-10">
    <BentoItem
      backgroundUrl="/images/compartir.png"
      imageUrl="/images/svg/animacion3.svg"
      className="col-span-7 md:col-span-4"
    >
      <h3 class="text-2xl font-bold text-white">
        Eleva tu experiencia de formularios con Formix
      </h3>
      <p class="text-xl font-normal">
        Dise単a formularios impactantes y funcionales para tu audiencia
        componentes
      </p>
      <a
        href="/"
        class="text-white-300 font-normal 
        flex gap-2 items-center justify-end self-end
        border border-blue-400 bg-blue-400 
        px-2 py-1 w-fit rounded-md"
      >
        Explorar
        <ArrowRight />
      </a>
    </BentoItem>
    <BentoItem
      backgroundUrl="/images/componentes.png"
      imageUrl="/images/svg/animacion5.svg"
      className="col-span-7 md:col-span-3"
    >
      <h3 class="text-[1.2rem] font-bold">
        Eleva tu experiencia de formularios con Formix
      </h3>
      <p class="text-[1rem] font-light">
        Dise単a formularios impactantes y funcionales para tu audiencia
        componentes
      </p>
      <a
        href="/"
        class="w-full text-blue-400 text-[.95rem] font-normal flex gap-2 items-center justify-end"
      >
        Explorar
        <ArrowRight />
      </a>
    </BentoItem>
    <BentoItem
      backgroundUrl="/images/respuestas.png"
      imageUrl="/images/svg/animacion5.svg"
      className="col-span-7 md:col-span-3"
    >
      <h3 class="text-[1.2rem] font-bold">
        Eleva tu experiencia de formularios con Formix
      </h3>
      <p class="text-[1rem] font-light">
        Dise単a formularios impactantes y funcionales para tu audiencia
        componentes
      </p>
      <a
        href="/"
        class="w-full text-blue-400 text-[.95rem] font-normal flex gap-2 items-center justify-end"
      >
        Explorar
        <ArrowRight />
      </a>
    </BentoItem>
    <BentoItem
      backgroundUrl="/images/temas.png"
      imageUrl="/images/svg/animacion4.svg"
      className="col-span-7 md:col-span-4"
    >
      <h3 class="text-[1.2rem] font-bold">
        Eleva tu experiencia de formularios con Formix
      </h3>
      <p class="text-[1rem] font-light">
        Dise単a formularios impactantes y funcionales para tu audiencia
        componentes
      </p>
      <a
        href="/"
        class="w-full text-blue-800 text-[1rem] font-semibold flex gap-2 items-center justify-end"
      >
        Explorar
        <ArrowRight />
      </a>
    </BentoItem>
  </div>
</section>

<style>
  .bento {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    grid-auto-rows: 350px;
    gap: 10px;
  }

  @media (min-width: 768px) {
    .bento {
      grid-auto-rows: 360px;
    }
  }

  @media (min-width: 920px) {
    .bento {
      grid-auto-rows: 450px;
    }
  }
</style>
